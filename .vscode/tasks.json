            },
            "problemMatcher": []
        },
        {
            "label": "CI: Full Test Suite",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Build Debug",
                "Build Release",
                "Run Bernoulli Test",
                "Run Error Test",
                "Run Fixed Error TV Test",
                "Run FPRT TV Test",
                "Run RPRT TV Test",
                "Compare Bernoulli Results",
                "Compare Error Results",
                "Compare Fixed Error TV Results",
                "Compare FPRT TV Results",
                "Compare RPRT TV Results"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "Build Release (Clean)",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "rm -rf build && cmake -B build -DCMAKE_BUILD_TYPE=Release -DCMAKE_CXX_FLAGS='-O3 -march=native -DNDEBUG' && cmake --build build --config Release --parallel"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": {
                "owner": "cpp",
