            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "Run Error Test",
            "type": "shell",
            "command": "./build/main",
            "args": [
                "./test/config/error_test.json",
                "./build/results"
            ],
            "group": "test",
            "dependsOn": "Prepare Results Directory",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "Compare Bernoulli Results",
            "type": "shell",
            "command": "python3",
            "args": [
                "scripts/compare_tsv.py",
                "./build/results/bernoulli_test_results.tsv",
                "./test/expected/bernoulli_expected.tsv"
            ],
            "group": "test",
            "dependsOn": "Run Bernoulli Test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "Compare Error Results",
            "type": "shell",
            "command": "python3",
            "args": [
                "scripts/compare_tsv.py",
                "./build/results/error_test_results.tsv",
